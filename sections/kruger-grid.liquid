    {
      "type": "font_picker",
      "id": "grid_logo_font",
      "label": "Grid Logo Font",
      "default": "helvetica_n4"
    },
    {
      "type": "color",
      "id": "logo_text_color",
      "label": "Logo Text",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "sign_up_color",
      "label": "Sign Up Text",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Kruger Grid"
    },
        {
      "type": "collection",
      "id": "view_all_collection",
      "label": "View All Collection",
      "info": "Select a collection for \"View All\" to lead."
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "grid_item"
        }
      ]
    }
  ]
}
